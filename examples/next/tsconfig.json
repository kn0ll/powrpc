{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ],
  "references": [
    { "path": "../../packages/client" },
    { "path": "../../packages/client-react" },
    { "path": "../../packages/server" },
    { "path": "../../packages/server-next" }
  ]
}
